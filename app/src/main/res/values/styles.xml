<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для кнопок -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="backgroundTint">@color/olive_accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Стиль для текстовых полей -->
    <style name="AppTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="boxStrokeColor">@color/olive_accent</item>
        <item name="hintTextColor">@color/olive_accent</item>
    </style>
</resources>
